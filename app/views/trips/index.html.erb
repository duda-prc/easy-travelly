<div class="container my-3 trips-cards">
  <% if @trips.empty? %>
    <p>No trips yet</p>
  <% else %>
    <% @trips.each do |trip| %>
      <div class="card card-trip text-bg-light mb-3">
        <div class="card-header d-flex">
          <div class='flex-grow-1 text-secondary'>
            <%= trip.name %>
          </div>
          <%= link_to edit_booking_path(trip.booking), class:'mx-1' do %>
            <i class="fa-solid fa-square-pen btn-outline-blue"></i>
          <% end %>
          <%= link_to trip_path(trip),
                                method: :delete,
                                data: { confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash btn-outline-pink"></i>
          <% end %>
        </div>
        <% destination = Trip::DESTINATIONS[trip.destination.to_sym]  %>
        <%=link_to trip, class:"btn-none" do  %>
          <% src = "https://source.unsplash.com/300x200/?London"  %>
          <div class="card-img-top" style="background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)), url(<%= src %>); height: 200px;color:white;"><%= trip.name %></div>
          <%#
          <img src="https://source.unsplash.com/300x200/?<%= destination %>
          <%# class="card-img-top card-trip-img" alt="Trip image"> %>
          <div class="card-body">
            <p>From: <%= trip.location %> <i class="fa-solid fa-plane-departure"></i></p>
            <p>Destination: <%= trip.destination %> <i class="fa-solid fa-plane-arrival"></i></p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><i class="fa-solid fa-hand-holding-dollar"></i> Budget: <%= trip.budget %></small>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
