<div class="container my-3">
  <h1><%= @trip.name %></h1>
  <hr>
  <div class="row justify-content-center">
    <div class="col-7 col-lg-4">
      <div class="card">
        <div class="card-header d-flex">
          <div class="flex-grow-1 text-info"><%= @trip.name %></div>
            <%= link_to edit_booking_path(@trip.booking), class:'mx-1' do %>
              <i class="fa-solid fa-square-pen btn-outline-blue fs-4"></i>
            <% end %>
            <%= link_to trip_path(@trip),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash btn-outline-pink fs-4"></i>
            <% end %>
        </div>
        <div class="card-body">
          <p><i class="fa-solid fa-hotel fs-3"></i> <%= @trip.booking.hotel.name  %> </p>
          <p> <i class="fa-solid fa-plane-departure fs-3"></i> N#<%= @trip.booking.flight.id %> </p>
          <p> <i class="fa-solid fa-person fs-3"></i> <%= @trip.adults %> adult(s)</p>
          <hr>
          <p><i class="fa-solid fa-calendar-day fs-3"></i> <%= @trip.start_date %><i class="fa-solid fa-arrow-right"></i> <%= @trip.end_date  %> </p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <% destination = Trip::DESTINATIONS[@trip.destination.to_sym]  %>
      <img src="https://source.unsplash.com/150x150/?<%= destination %>" alt="Trip image" class="rounded-circle">
    </div>
  </div>

  <hr>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-sm-10">
    <h3>Budget info <i class="fa-solid fa-money-bill-wheat text-info"></i></h3>

    <table class="table table-striped table-hover">
    <tbody>
      <tr>
        <td>Total Budget</td>
        <td> <strong><%= @trip.budget.round(2) %> <i class="fa-solid fa-euro-sign"></i></strong></td>
      </tr>
      <tr>
        <td>Hotel</td>
        <td><%= @trip.booking.hotel.price.round(2) %> <i class="fa-solid fa-euro-sign"></i></i></td>
      </tr>
      <tr class="border-bottom border-dark">
        <td>Flight</td>
        <td><%= @trip.booking.flight.price.round(2) %> <i class="fa-solid fa-euro-sign"></i></i></td>
      </tr>
      <tr>
        <td>Budget left</td>
        <% budget_left = (@trip.budget - @trip.booking.flight.price - @trip.booking.hotel.price).round(2) %>
        <% days_left = (@trip.end_date - @trip.start_date).to_i %>
        <td><%= budget_left %> <i class="fa-solid fa-euro-sign"></i></td>
      </tr>
      <tr>
        <td>Budget left (per/day)</td>
        <td class="text-warning"><%= (budget_left/days_left).round(2) %> <i class="fa-solid fa-euro-sign"></i></td>
      </tr>
    </tbody>
    </table>

    <%= link_to "Back", :back, class:'btn btn-pink' %>
    </div>
  </div>
</div>
